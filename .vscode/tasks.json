{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "gpr",
            "projectFile": "${config:ada.projectFile}",
            "main": "",
            "problemMatcher": [
                "$ada-error",
                "$ada-warning",
                "$ada-info"
            ],
            "label": "gpr: The 'gpr' task type is obsolete. Please use 'ada' tasks instead."
        }
    ],
    "version": "2.0.0"
}